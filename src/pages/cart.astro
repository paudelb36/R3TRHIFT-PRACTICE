---
import Header from "../components/Header.astro";
import CartItem from "../components/CartItem.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <Header />
  <div class="container grid grid-cols-3 gap-5 mt-5 px-4 md:px-10 pb-24">
    <!-- Cart Section -->
    <div class="col-span-3 md:col-span-2 p-3 md:p-5">
      <p class="text-lg md:text-xl">Bag (1)</p>
      <CartItem class="text-sm md:text-base p-2 md:p-4" />
      <CartItem class="text-sm md:text-base p-2 md:p-4" />
      <CartItem class="text-sm md:text-base p-2 md:p-4" />
      <CartItem class="text-sm md:text-base p-2 md:p-4" />
    </div>

    <!-- Discount Code and Price Details Section -->
    <div class="col-span-3 md:col-span-1 flex flex-col gap-4">
      <!-- Discount Code Section -->
      <div class="p-3 md:p-5 bg-gray-100 rounded-lg">
        <p class="text-sm md:text-base font-semibold mb-3">Apply Discount Code</p>
        <div class="flex items-center">
          <input
            type="text"
            id="discountCode"
            class="w-full p-2 border border-gray-400 text-sm rounded-l"
            placeholder="Enter your discount code"
            oninput="toggleApplyButton()"
          />
          <!-- Apply Button (Initially Hidden) -->
          <button
            id="applyButton"
            class="bg-black text-white py-2 px-4 text-sm rounded-r hidden"
            onclick="applyDiscount()"
          >
            Apply
          </button>
        </div>
      </div>

      <!-- Price Details Section -->
      <div class="p-3 md:p-5 bg-gray-100 rounded-lg">
        <p class="text-sm md:text-base font-semibold mb-3">Price Details</p>
        <div class="space-y-2">
          <div class="flex justify-between">
            <p class="text-sm">ITEMS</p>
            <p class="text-sm">1</p>
          </div>
          <div class="flex justify-between">
            <p class="text-sm">SUBTOTAL</p>
            <p class="text-sm">Rs. 10,795</p>
          </div>
          <div class="flex justify-between">
            <p class="text-sm">DISCOUNT</p>
            <p class="text-sm">Rs. 0</p>
          </div>
          <div class="flex justify-between">
            <p class="text-sm">TAX</p>
            <p class="text-sm">Rs. 0</p>
          </div>
          <div class="flex justify-between">
            <p class="text-sm">SHIPPING</p>
            <p class="text-sm">Calculated at checkout</p>
          </div>
          <div class="flex justify-between font-bold">
            <p class="text-sm">TOTAL</p>
            <p class="text-sm">Rs. 10,795</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<!-- Shipping & Total Section with Checkout Button -->
<div class="fixed w-full bottom-0 grid grid-cols-1 sm:grid-cols-3 h-24 sm:h-20  bg-gray-200 px-4 sm:px-10">
  <!-- Shipping & Total Section -->
  <div class="col-span-2 sm:col-span-2 pt-2 flex items-center justify-around">
    <div>
      <p class="text-xs sm:text-md">SHIPPING</p>
      <p class="text-sm sm:text-md font-bold">TOTAL</p>
    </div>
    <div class="text-right">
      <p class="text-xs sm:text-md">Calculated at Checkout</p>
      <p class="text-sm sm:text-md font-bold">Rs. 10,795</p>
    </div>
  </div>

  <!-- Checkout Button -->
  <div class="col-span-1 flex items-center justify-around">
    <a href="/checkout" class="w-full flex justify-end">
      <div class="h-10 sm:h-12 w-full sm:w-4/5 bg-black text-white flex items-center justify-center text-xs sm:text-sm font-bold">
        CHECKOUT
      </div>
    </a>
  </div>
</div>

<script is:inline>
  // Function to toggle Apply button visibility
  function toggleApplyButton() {
    const discountCode = document.getElementById("discountCode").value;
    const applyButton = document.getElementById("applyButton");

    // Show the apply button if the input is not empty
    if (discountCode.trim().length > 0) {
      applyButton.classList.remove("hidden");
    } else {
      applyButton.classList.add("hidden");
    }
  }
</script>