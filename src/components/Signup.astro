<!-- Sign Up Form -->
<div class="container max-w-4xl mx-auto h-screen bg-gray-100">
    <div class="mt-4">
        <!-- Grid for Input Fields -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <!-- First Name -->
            <input
                type="text"
                class="w-full p-2 bg-gray-200 h-10 text-black text-sm"
                placeholder="FIRST NAME"
            />
            <!-- Last Name -->
            <input
                type="text"
                class="w-full p-2 bg-gray-200 h-10 text-black text-sm"
                placeholder="LAST NAME"
            />
            <!-- Email -->
            <input
                type="email"
                class="w-full p-2 bg-gray-200 h-10 text-black text-sm"
                placeholder="EMAIL"
            />
            <!-- Date of Birth -->
            <input
                type="number"
                class="w-full p-2 bg-gray-200 h-10 text-black text-sm"
                placeholder="DOB"
            />
        </div>
    </div>

    <!-- Country Select -->
    <select class="w-full bg-gray-200 mt-4 p-2 text-sm text-black">
        <option value="+977">Nepal</option>
        <option value="+911">India</option>
        <option value="+611">United States</option>
        <option value="+612">Zimbabwe</option>
        <option value="+123">New Zealand</option>
        <option value="+456">Canada</option>
    </select>

    <!-- Password -->
    <input
        type="password"
        class="w-full p-2 h-10 text-sm bg-gray-200 mt-4 text-black"
        placeholder="PASSWORD"
    />

    <!-- Register Button -->
    <button
        class="bg-black h-10 p-2 w-full mt-4 text-white cursor-pointer text-sm hover:bg-gray-800 transition-colors"
    >
        REGISTER
    </button>
</div>