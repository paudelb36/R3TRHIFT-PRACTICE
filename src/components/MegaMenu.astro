---
import { menuItems } from "../data/menu.js";

---

<ul class="nav-links flex space-x-10">
    {
      menuItems.map((category) => (
        <li class={category.product ? "group" : ""}>
          <a href={category.href}>{category.category}</a>
          {
            category.product && (
              <div class="absolute top-24 left-0 w-full bg-black/50 opacity-0 invisible group-hover:opacity-100 group-hover:visible duration-300">
                <div class="flex gap-2 py-6 bg-white px-[82px]">
                  {
                    category.product.map((product) => (
                      <div class="w-1/3">
                        <h4 class="text-sm font-bold mb-4 text-[#737373]">
                          {product.title}
                        </h4>
                        <ul class="space-y-2">
                          {
                            product.items.map((item) => (
                              <li>
                                <a href="#" class="text-[10px]">
                                  {item}
                                </a>
                              </li>
                            ))
                          }
                        </ul>
                      </div>
                    ))
                  }
                </div>
              </div>
            )
          }
        </li>
      ))
    }
  </ul>